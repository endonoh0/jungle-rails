<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>

  <% if current_user %>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-1">
        <%= form_for [@product, @review] do |form| %>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_field :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :rating %>
            <%= form.select :rating, [1, 2, 3, 4, 5], include_blank: true, class: 'form-control' %>
          </div>

          <%= form.submit 'Create Review', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  <% end %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>User</th>
        <th>Stars</th>
        <th>Review</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @product.reviews.reverse.each do |review|%>
        <tr>
          <td><%=review.user.first_name%></td>
          <td><%=review.rating%></td>
          <td><%=review.description%></td>

          <% if review.user.id == current_user.id %>
            <td>
              <%= link_to fa_icon('trash'), product_review_path(@product.id, review), class: 'btn btn-sm btn-danger', method: :delete %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</section>
